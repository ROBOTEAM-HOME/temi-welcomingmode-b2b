<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="241dp"
    android:paddingTop="60dp"
    android:paddingEnd="241dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAutoCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="@string/settings_auto_call"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.robotemi.welcomingbtob.widgets.CustomToggle
        android:id="@+id/customToggleAutoCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvAutoCall" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAutoCallDescription"
        android:layout_width="604dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/settings_auto_call_description"
        android:textColor="@color/gray200"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAutoCall" />

</androidx.constraintlayout.widget.ConstraintLayout>